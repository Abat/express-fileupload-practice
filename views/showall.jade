extends layout	
	
block content
	h1 Gallery
	div#blueimp-gallery.blueimp-gallery.blueimp-gallery-controls
		div.slides
		h3.title
		a.prev
		a.next
		a.close
		a.play-pause
		ol.indicator

	div#links
		a(href="img/banana.jpg" title='Banana') banana
		|<br />
		a(href='img/apple.jpg' title='Apple') apple
		|<br />
		a(href='img/orange.jpg' title='Orange') orange
		each val in files
			a(href= val)= val 
			|<br />


	script(src='js/blueimp-gallery.min.js')
	script(src='js/jquery-2.0.3.min.js')

	script().
		document.getElementById('links').onclick = function (event) {
			event = event || window.event;
			var target = event.target || event.srcElement,
					link = target.src ? target.parentNode : target,
					options = {index: link, event: event},
					links = this.getElementsByTagName('a');
			blueimp.Gallery(links, options);
		};